{% render 'partials/head.liquid', title: 'Squad page' %}

<main>
  <div class="middle-line"></div>
  <div class="goal-line-1"></div>
  <div class="goal-line-2"></div>
  <section class="team-a">
    {% assign positions = "keeper,def-1,def-2,def-3,def-4,mid-1,mid-2,mid-3,att-1,att-2,att-3,keeper-2,def-5,def-6,def-7,def-8,mid-4,mid-5,mid-6,att-4,att-5,att-6" | replace: " ", "" | split: "," %}
    {% for person in persons limit:22 %}
      <div class="player {{ positions[forloop.index0] }}" style="border: 2px solid {{ person.fav_color }};">
        <a href="student/{{ person.id }}">
          <img src="{% if person.mugshot %} https://fdnd.directus.app/assets/{{ person.mugshot }} {% else %} GabgQZoWMAAufWc.jpg {% endif %}" alt="{{ person.name }}">
          <span class="player-name">{{ person.name }}</span>
        </a>
      </div>
    {% endfor %}
  </section>
  <button id="openCloseReserve">Reserve</button>
</main>
  <section class="reserve-team">
    {% for person in persons offset:22 %}
      <a class="reserve-player" href="student/{{ person.id }}">
        <img src="{% if person.mugshot %} https://fdnd.directus.app/assets/{{ person.mugshot }} {% else %} GabgQZoWMAAufWc.jpg {% endif %}" alt="{{ person.name }}">
      </a>
    {% endfor %}
  </section>  

{% comment %}
  <h2>Students</h2>
  <ul>
    {% for person in persons %}
      <li><a href="/student/{{ person.id }}">{{ person.name }}</a></li>
    {% endfor %}
  </ul>
{% endcomment %}

{% render 'partials/foot.liquid', squads: squads %}
