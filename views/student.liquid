{% render 'partials/head.liquid', title: person.name %}

<a href="/">Back</a>

<div class="Card">
  <img
    class="mugshot-picture"
    src="{% if person.mugshot %}https://fdnd.directus.app/assets/{{ person.mugshot }}{% else %}/images/prop.jpg{% endif %}"
    alt="{{ person.name }}"
    width="300"
  >
  <h2>{{ person.name }}</h2>
  <p class="squad">Squad {{ squad.name }}</p>

  <div class="bericht">
    <h3>Laat een bericht achter</h3>

    <textarea placeholder="Schrijf je bericht hier..."></textarea>

    <div class="row">
      <input type="text" placeholder="Naam">
      <button>Versturen</button>
    </div>
  </div>
</div>

{% comment %} {% render 'partials/foot.liquid', squads: squads %} {% endcomment %}